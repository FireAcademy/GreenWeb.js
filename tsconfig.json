{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "experimentalDecorators": true,
    "target": "es5",
    "downlevelIteration": true,
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "baseUrl": "./",
    "strictPropertyInitialization": false,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
